<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="150"
             xmlns:controls="using:CSharpSyntaxEditor.Controls"
             xmlns:ce="using:CSharpSyntaxEditor.Controls.Extensions"
             x:Class="CSharpSyntaxEditor.Controls.SyntaxTreeListNode">
  <StackPanel
    Name="outerStackPanel"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
  >
    <ContentControl
      Name="topNodeContent"
      HorizontalAlignment="Stretch">
    </ContentControl>

    <!--
    Consider adding an auto-sizable rectangle here only to hold the hover color
    This may completely free us from the need to correct the contained nodes' width
    -->
    
    <ce:VerticallyExpandableCanvas
      Name="expandableCanvas"
      >
      <StackPanel
        Name="innerStackPanel"
        Margin="30 0 0 0"
        HorizontalAlignment="Stretch"
        ClipToBounds="True"
        Canvas.Left="0"
        Canvas.Top="0"
        >

      </StackPanel>
    </ce:VerticallyExpandableCanvas>
  </StackPanel>
</UserControl>
