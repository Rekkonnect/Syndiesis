<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="20"
        xmlns:controls="using:CSharpSyntaxEditor.Controls"
        x:Class="CSharpSyntaxEditor.Controls.CodeEditorLine">

  <Panel Name="backgroundPanel">
    <Panel
          Name="lineContentPanel">

      <TextBlock
        FontFamily="Fira Code"
        FontWeight="Normal"
        Name="lineContentText"
        Margin="2 2 0 0"/>
      <controls:Cursor
        HorizontalAlignment="Left"
        Padding="1 0 0 0"
        Name="cursor">
        
      </controls:Cursor>
    </Panel>
  </Panel>
</UserControl>
