<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:CSharpSyntaxEditor"
             x:Class="CSharpSyntaxEditor.App"
             RequestedThemeVariant="Dark"
             >
  <Application.DataTemplates>
    <local:ViewLocator/>
  </Application.DataTemplates>

  <Application.Styles>
    <FluentTheme />
  </Application.Styles>
  
  <!-- TODO Fix those resources -->
  <Application.Resources>
    <FontFamily x:Key="AptosFontFamily">avares://CSharpSyntaxEditor/Assets/Fonts/Aptos</FontFamily>
    <FontFamily x:Key="AptosDisplayFontFamily">avares://CSharpSyntaxEditor/Assets/Fonts/Aptos Display</FontFamily>
    <FontFamily x:Key="FiraCodeFontFamily">avares://CSharpSyntaxEditor/Assets/Fonts/Fira Code</FontFamily>
  </Application.Resources>
</Application>
