<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="30"
             xmlns:controls="using:Syndiesis.Controls"
             xmlns:tabs="using:Syndiesis.Controls.Tabs"
             x:Class="Syndiesis.Controls.LanguageVersionDropDownEnvelope"
             Width="300"
             >

  <Panel>

    <tabs:TabEnvelope
      IsSelected="True"
    >
    </tabs:TabEnvelope>

    <Panel
      Margin="0 1 0 0"
      >
      
      <TextBlock
        Name="languageText"
        FontFamily="{StaticResource AptosDisplayFontFamily}"
        FontSize="18"
        TextAlignment="Center"
        VerticalAlignment="Center"
        HorizontalAlignment="Stretch"
        />

      <Polygon
        Grid.Column="1"
        Points="0,0 8,10 16,0"
        Fill="#38A0FF"
        HorizontalAlignment="Right"
        VerticalAlignment="Center"
        Margin="0 1 10 0"
        />
      
    </Panel>
    
  </Panel>

</UserControl>
