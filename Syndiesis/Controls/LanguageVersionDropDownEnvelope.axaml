<UserControl
  x:Class="Syndiesis.Controls.LanguageVersionDropDownEnvelope"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:controls="using:Syndiesis.Controls"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:tabs="using:Syndiesis.Controls.Tabs"
  Width="300"
  d:DesignHeight="30"
  mc:Ignorable="d"
  >

  <Panel>

    <tabs:TabEnvelope
      IsSelected="True"
      />

    <Panel
      Margin="0 1 0 0"
      >

      <TextBlock
        Name="languageText"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Center"
        FontFamily="{StaticResource AptosDisplayFontFamily}"
        FontSize="18"
        TextAlignment="Center"
        />

      <Polygon
        Grid.Column="1"
        Margin="0 1 10 0"
        HorizontalAlignment="Right"
        VerticalAlignment="Center"
        Fill="#38A0FF"
        Points="0,0 8,10 16,0"
        />

    </Panel>

  </Panel>

</UserControl>
