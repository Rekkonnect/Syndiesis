<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="150"
             xmlns:controls="using:Syndiesis.Controls"
             xmlns:ce="using:Syndiesis.Controls.Extensions"
             x:Class="Syndiesis.Controls.SyntaxTreeListNode">
  <StackPanel
    Name="outerStackPanel"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
  >
    <ContentControl
      Name="topNodeContent"
      HorizontalAlignment="Stretch"
      >
    </ContentControl>

    <ce:VerticallyExpandablePanel
      Name="expandableCanvas"
      HorizontalAlignment="Stretch"
      >
      <StackPanel
        Name="innerStackPanel"
        Margin="15 0 0 0"
        HorizontalAlignment="Stretch"
        Canvas.Left="0"
        Canvas.Top="0"
        >

      </StackPanel>
    </ce:VerticallyExpandablePanel>
  </StackPanel>
</UserControl>
