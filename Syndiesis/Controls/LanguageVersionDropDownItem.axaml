<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Syndiesis.Controls.LanguageVersionDropDownItem">
  <UserControl.Resources>
    <ResourceDictionary>
      <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#50808080" />
      <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#70808080" />
    </ResourceDictionary>
  </UserControl.Resources>
  
  <Button
    Name="Button"
    Background="Transparent"
    Padding="2 0 2 0"
    >
    <TextBlock
      Name="TextBlock"
      FontSize="16"
      FontFamily="{StaticResource AptosFontFamily}"
      Text="12.0"
      />
  </Button>
</UserControl>
