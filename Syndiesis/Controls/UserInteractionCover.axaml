<UserControl
  x:Class="Syndiesis.Controls.UserInteractionCover"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="350"
  d:DesignWidth="600"
  mc:Ignorable="d"
  >

  <Grid
    Background="Transparent"
    >
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <ContentControl
      Name="iconContainer"
      Grid.Row="0"
      Width="40"
      Height="40"
      HorizontalAlignment="Center"
      VerticalAlignment="Bottom"
      >
      <Image
        Source="avares://Syndiesis/Assets/Icons/fa-pen-fancy.png"
        />
    </ContentControl>

    <TextBlock
      Name="textDisplay"
      Grid.Row="1"
      Margin="0 20 0 0"
      HorizontalAlignment="Center"
      VerticalAlignment="Top"
      FontFamily="{StaticResource AptosFontFamily}"
      FontSize="15"
      Foreground="#009099"
      Text="Funding for this program was made&#x0a;possible by viewers like you."
      TextAlignment="Center"
      />

  </Grid>

</UserControl>
