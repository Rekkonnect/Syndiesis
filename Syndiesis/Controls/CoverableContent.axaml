<UserControl
  x:Class="Syndiesis.Controls.CoverableContent"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="using:Syndiesis.Controls"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d"
  >

  <Panel
    Name="outerPanel"
    >
    <ContentControl
      Name="content"
      />

    <local:UserInteractionCover
      Name="cover"
      Background="#000C0F"
      Opacity="0"
      />
  </Panel>

</UserControl>
