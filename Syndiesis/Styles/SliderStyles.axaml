<ResourceDictionary
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  >

  <!--
    Preview copied from
    https://github.com/AvaloniaUI/Avalonia/blob/master/src/Avalonia.Themes.Fluent/Controls/Slider.xaml
  -->
  <Design.PreviewWith>
    <Border
      Width="400"
      Height="600"
      Margin="20"
      >
      <DockPanel
        LastChildFill="True"
        >
        <StackPanel
          DockPanel.Dock="Top"
          Spacing="10"
          >
          <Slider
            Value="50"
            />
          <Slider
            IsDirectionReversed="True"
            Value="50"
            />
          <Slider
            TickFrequency="10"
            TickPlacement="TopLeft"
            Value="50"
            />
          <Slider
            TickFrequency="10"
            TickPlacement="BottomRight"
            Value="50"
            />
          <Slider
            TickFrequency="10"
            TickPlacement="Outside"
            Value="50"
            />
          <Slider
            IsEnabled="False"
            Value="50"
            />
          <Slider
            Value="50"
            />
        </StackPanel>
        <StackPanel
          Orientation="Horizontal"
          Spacing="10"
          >
          <Slider
            Orientation="Vertical"
            Value="50"
            />
          <Slider
            IsDirectionReversed="True"
            Orientation="Vertical"
            Value="50"
            />
          <Slider
            IsEnabled="False"
            Orientation="Vertical"
            Value="50"
            />
          <Slider
            Orientation="Vertical"
            TickFrequency="10"
            TickPlacement="TopLeft"
            Value="50"
            />
          <Slider
            Orientation="Vertical"
            TickFrequency="10"
            TickPlacement="BottomRight"
            Value="50"
            />
          <Slider
            Orientation="Vertical"
            TickFrequency="10"
            TickPlacement="Outside"
            Value="50"
            />
        </StackPanel>
      </DockPanel>
    </Border>
  </Design.PreviewWith>

  <SolidColorBrush
    x:Key="SliderTrackFill"
    Color="#60008088"
    />
  <SolidColorBrush
    x:Key="SliderTrackFillPointerOver"
    Color="#80008088"
    />
  <SolidColorBrush
    x:Key="SliderTrackFillPressed"
    Color="#80008088"
    />
  <SolidColorBrush
    x:Key="SliderTrackValueFill"
    Color="#008088"
    />
  <SolidColorBrush
    x:Key="SliderTrackValueFillPointerOver"
    Color="#009099"
    />
  <SolidColorBrush
    x:Key="SliderTrackValueFillPressed"
    Color="#009099"
    />
  <SolidColorBrush
    x:Key="SliderThumbBackground"
    Color="#00A0AA"
    />
  <SolidColorBrush
    x:Key="SliderThumbBackgroundPointerOver"
    Color="#00B0BB"
    />
  <SolidColorBrush
    x:Key="SliderThumbBackgroundPressed"
    Color="#008088"
    />

</ResourceDictionary>
